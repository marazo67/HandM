<% title = 'Login' %>
<div class="Box mt-6" style="max-width: 400px; margin: 0 auto;">
  <div class="Box-header">
    <h3 class="Box-title">Login/Create to H&M HOLDERS</h3>
  </div>
  <div class="Box-body">
    <form method="POST" action="/login">
      <dl class="form-group">
        <dt><label>Username or Email</label></dt>
        <dd><input type="text" name="username" class="form-control" required></dd>
      </dl>
      <dl class="form-group">
        <dt><label>Password</label></dt>
        <dd><input type="password" name="password" class="form-control" required></dd>
      </dl>
      <button type="submit" class="btn btn-primary btn-block">Login</button>
    </form>
    <p class="mt-3 text-center">Don't have an account? <a href="/register">Register</a></p>
  </div>
</div>
