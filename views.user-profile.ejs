<% title = 'My Profile' %>
<div class="Box p-4">
  <div class="d-flex flex-items-center">
    <% if (user.profile_pic_url) { %>
      <img src="<%= user.profile_pic_url %>" class="avatar" style="width: 80px; height: 80px; margin-right: 16px;">
    <% } else { %>
      <span class="avatar" style="width: 80px; height: 80px; line-height: 80px; font-size: 40px; margin-right: 16px;">
        <%= user.name ? user.name[0].toUpperCase() : 'U' %>
      </span>
    <% } %>
    <div>
      <h2><%= user.name %></h2>
      <p class="text-gray">@<%= user.username %></p>
      <div class="d-flex">
        <span class="mr-3"><strong><%= followersCount %></strong> followers</span>
        <span><strong><%= followingCount %></strong> following</span>
      </div>
      <% if (user.bio) { %>
        <p class="mt-2"><%= user.bio %></p>
      <% } %>
      <% if (user.role === 'admin') { %>
        <span class="badge-verified">Verified Admin</span>
      <% } %>
    </div>
  </div>
  <hr>
  <h3>Edit Profile</h3>
  <form method="POST" action="/user/profile/update" enctype="multipart/form-data">
    <dl class="form-group">
      <dt><label>Name</label></dt>
      <dd><input type="text" name="name" class="form-control" value="<%= user.name %>" required></dd>
    </dl>
    <dl class="form-group">
      <dt><label>Email</label></dt>
      <dd><input type="email" name="email" class="form-control" value="<%= user.email %>" required></dd>
    </dl>
    <dl class="form-group">
      <dt><label>Bio</label></dt>
      <dd><textarea name="bio" class="form-control" rows="3"><%= user.bio || '' %></textarea></dd>
    </dl>
    <dl class="form-group">
      <dt><label>Profile Picture</label></dt>
      <dd><input type="file" name="profile_pic" accept="image/*"></dd>
    </dl>
    <button type="submit" class="btn btn-primary">Update Profile</button>
  </form>
</div>
