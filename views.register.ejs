<% title = 'Register' %>
<div class="Box mt-6" style="max-width: 400px; margin: 0 auto;">
  <div class="Box-header">
    <h3 class="Box-title">JOIN H&M HOLDERS TODAYðŸ’›</h3>
  </div>
  <div class="Box-body">
    <form method="POST" action="/register">
      <dl class="form-group">
        <dt><label>Username</label></dt>
        <dd><input type="text" name="username" class="form-control" required></dd>
      </dl>
      <dl class="form-group">
        <dt><label>Email</label></dt>
        <dd><input type="email" name="email" class="form-control" required></dd>
      </dl>
      <dl class="form-group">
        <dt><label>Full Name</label></dt>
        <dd><input type="text" name="name" class="form-control" required></dd>
      </dl>
      <dl class="form-group">
        <dt><label>Password</label></dt>
        <dd><input type="password" name="password" class="form-control" required></dd>
      </dl>
      <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form>
    <p class="mt-3 text-center">Already have an account? <a href="/login">Login</a></p>
  </div>
</div>
